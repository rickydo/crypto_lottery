<div class="signing_in">
	<% if !current_user %>
		<%= form_tag("/login", :method => "post") do %>
			<%= text_field_tag :email, nil, placeholder: :Email %><br>
			<%= password_field_tag :password, nil, placeholder: :Password %><br>
			<%= submit_tag :Login %>
			<% end %>
			<%= flash[:error] if flash[:error] %>

		<%= link_to 'Not a user? Sign up!', new_user_path %>

	<% else %>
	<h1>Welcome <%= @user.email %>!</h1>
		<%= link_to "Logout", logout_path, method: :destroy %>
	<% end %>
</div>
